                                <stop offset="1" stop-color="#BD34FE" id="stop40"></stop>
                            </linearGradient>
                            <linearGradient id="paint1_linear" x1="194.651" y1="8.8182" x2="236.076" y2="292.989" gradientUnits="userSpaceOnUse" gradientTransform="matrix(.07142 0 0 .07142 1.3398 1.8944)">
                                <stop stop-color="#FFEA83" id="stop43"></stop>
                                <stop offset=".0833" stop-color="#FFDD35" id="stop45"></stop>
                                <stop offset="1" stop-color="#FFA800" id="stop47"></stop>
                            </linearGradient>
                        </defs>
                    </svg>
                    <span class="circle__tech-name">Vite</span>
                </div>
            </div>
            <div class="circle__arc circle__arc--2">
                <div class="circle__elements--2">
                    <div class="circle__items circle__items--2">
                        <div class="circle__item circle__item--row-2">
                            <Icon name="stack/webpack" width={44} height={44} />
                            <span class="circle__tech-name">WebPack</span>
                        </div>
                        <div class="circle__item circle__item--row-2">
                            <Icon name="stack/pug" width={44} height={44} />
                            <span class="circle__tech-name">Pug</span>
                        </div>
                        <div class="circle__item circle__item--row-2">
                            <Icon name="stack/scss" width={44} height={44} />
                            <span class="circle__tech-name">SCSS</span>
                        </div>
                        <div class="circle__item circle__item--row-2">
                            <Icon name="stack/gulp" width={44} height={44} />
                            <span class="circle__tech-name">Gulp</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="circle__arc circle__arc--1">
                <div class="circle__items circle__items--1">
                    <div class="circle__item circle__item--row-1">
                        <Icon name="stack/html" width={64} height={64} />
                        <span class="circle__tech-name">HTML</span>
                    </div>
                    <div class="circle__item circle__item--row-1">
                        <Icon name="stack/js" width={64} height={64} />
                        <span class="circle__tech-name">JavaScript</span>
                    </div>
                    <div class="circle__item circle__item--row-1">
                        <Icon name="stack/css" width={64} height={64} />
                        <span class="circle__tech-name">CSS</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style lang="scss">
    .circle {
        position: relative;
        margin-bottom: 120px;

        &__inner {
            padding-top: 12px;
            position: relative;
            overflow: hidden;
        }

        &__wrapper {
            height: 500px;
            margin-bottom: 50px;
        }

        &__items {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);

            display: flex;
            justify-content: space-between;
        }

        &__items--1 {
            top: -72px;
            gap: 100px;
            height: 408px;
        }

        &__items--2 {
            position: relative;
            top: -72px;
            left: unset;
            transform: none;

            gap: 80px;

            width: 61%;
            height: 600px;
        }

        &__items--3 {
            width: 93%;
            height: 1095px;
        }

        &__arc {
            position: absolute;
            z-index: 0;
            left: 50%;
            transform: translateX(-50%);

            border: 2px solid $color-light;
            border-radius: 50%;
        }

        &__arc--1 {
            top: 390px;
            width: 120%;
            height: 800px;
        }

        &__arc--2 {
            top: 205px;
            width: 121%;
            height: 807px;
        }

        &__arc--3 {
            top: 43px;
            width: 135%;
            height: 1095px;
        }

        &__elements--2 {
            position: relative;

            display: flex;
            justify-content: center;

            width: 100%;
            height: 1700px;
        }

        &__item {
            position: relative;
            z-index: 1;

            display: flex;
            flex-direction: column;
            flex-shrink: 0;
            align-items: center;
            justify-content: center;

            background-color: $bg-dark;
            border: 2px solid $bg-light;
            border-radius: 13px;
            box-shadow: 2px 2px 0 0 $bg-light;
        }

        &__item--row-1 {
            gap: 10px;
            width: 130px;
            height: 130px;
            padding: 10px;
        }

        &__item--row-2 {
            gap: 4px;
            width: 105px;
            height: 105px;
            padding: 10px;
        }

        &__item--row-3 {
            gap: 4px;
            width: 90px;
            height: 90px;
            padding: 10px;
        }

        &__item--row-1:nth-child(1),
        &__item--row-1:nth-child(3) {
            top: 45px;
            transform: scale(0.95);
        }

        &__item--row-2:nth-child(2),
        &__item--row-2:nth-child(3) {
            top: 33px;
        }

        &__item--row-2:nth-child(1),
        &__item--row-2:nth-child(4) {
            top: 76px;
        }

        &__item--row-3:nth-child(3) {
            margin: 0 30px;
        }

        &__item--row-3:nth-child(2),
        &__item--row-3:nth-child(4) {
            top: 33px;
        }

        &__item--row-3:nth-child(1),
        &__item--row-3:nth-child(5) {
            top: 110px;
        }

        &__icon {
            flex-shrink: 0;
        }

        &__tech-name {
            color: $color-light;
        }

        @media (max-width: 960px) {
            display: none;
        }
    }
</style>
