---
import { Icon } from 'astro-icon/components';
---

<div class="circle">
    <div class="circle__inner" id="3">
        <div class="circle__arc circle__arc--3"></div>
        <div class="circle__wrapper">
            <div class="circle__items circle__items--3">
                <div class="circle__item circle__item--row-3 circle__item--git">
                    <Icon name="stack/git" width={38} height={44} />
                    <span class="circle__tech-name">Git</span>
                </div>

                <div class="circle__item circle__item--row-3">
                    <Icon name="stack/nuxt" width={44} height={44} />
                    <span class="circle__tech-name">Nuxt</span>
                </div>

                <div class="circle__item circle__item--row-3">
                    <Icon name="stack/vue" width={38} height={38} />
                    <span class="circle__tech-name">Vue</span>
                </div>

                <div class="circle__item circle__item--row-3">
                    <Icon name="stack/ts" width={38} height={38} />
                    <span class="circle__tech-name">TypeScript</span>
                </div>
                <div class="circle__item circle__item--row-3">
                    <svg width="44px" height="44px" viewBox="0 0 34 34" xmlns="http://www.w3.org/2000/svg" fill="none">
                        <path d="M29.8836 6.146L16.7418 29.6457c-.2714.4851-.9684.488-1.2439.0052L2.0956 6.1482c-.3-.5262.1498-1.1635.746-1.057l13.156 2.3516a.7144.7144 0 00.2537-.0004l12.8808-2.3478c.5942-.1083 1.0463.5241.7515 1.0513z" fill="url(#paint0_linear)"></path>
